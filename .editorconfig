[*]
charset = utf-8
insert_final_newline = true

[*.{c,cmake,cpp,cxx,h,hpp,hxx}]
indent_style = tab
indent_size = 4

[*.cmake]
indent_style = tab
indent_size = 4

[*.json]
indent_style = space
indent_size = 2

[*.ppj]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.bat]
end_of_line = crlf
